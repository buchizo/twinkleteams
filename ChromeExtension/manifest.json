{
    "name": "Twinkle2Teams",
    "author": "kosmosebi",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Send Microsoft Teams speaking status to others",
    "content_scripts": [
        {
            "matches": [
                "https://teams.microsoft.com/*"
            ],
            "js": [
                "index.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs", "webNavigation"
    ],
    "host_permissions": [
        "https://teams.microsoft.com/*"
    ]
}